<h3><%= t(:shipping_addresses, scope: :spree) %></h3>
<% if spree_current_user.addresses.present? %>
<table id='user_addresses' class="table table-striped">
  <tbody>
    <% spree_current_user.addresses.each do |address| %>
    <tr>
      <td><%= address.to_s.gsub("<br/>", ", ") %></td>
      <td>
        <%= link_to I18n.t(:edit, scope: :spree), edit_address_path(address) %>&nbsp;
        <%= link_to I18n.t(:remove, scope: :spree), address_path(address), method: :delete, confirm: I18n.t(:are_you_sure, scope: :spree) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<div id='users-address-list-empty'>
  <%= t(:no_shipping_addresses_on_file, scope: :spree) %>
</div>
<% end %>
<div id='new_address_link'>
  <%= link_to t(:add_new_shipping_address, scope: :spree), controller: :addresses, action: :new %>
</div>
